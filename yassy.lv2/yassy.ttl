@prefix atom:  <http://lv2plug.in/ns/ext/atom#> .
@prefix doap:  <http://usefulinc.com/ns/doap#> .
@prefix lv2:   <http://lv2plug.in/ns/lv2core#> .
@prefix urid:  <http://lv2plug.in/ns/ext/urid#> .
@prefix midi:  <http://lv2plug.in/ns/ext/midi#> .
@prefix ui:    <http://lv2plug.in/ns/extensions/ui#> .


<http://example.org/yassy>
	a lv2:Plugin ,
		lv2:Synthesizer ;

	lv2:project <http://example.org> ;

	doap:name "yassy (simple synth)" ;
	lv2:requiredFeature urid:map;
	lv2:optionalFeature lv2:hardRTCapable ;
	ui:ui <http://example.org/yassy#ui> ;
        lv2:port [
          a lv2:InputPort ,
                  atom:AtomPort ;
          atom:bufferType atom:Sequence ;
          atom:supports midi:MidiEvent ;
          lv2:index 0 ;
          lv2:symbol "in" ;
          lv2:name "In"
	] , [
          a lv2:AudioPort ,
                  lv2:OutputPort ;
          lv2:index 1 ;
          lv2:symbol "out" ;
          lv2:name "Out"
	] , [
	  a lv2:InputPort ,
                  lv2:ControlPort ;
          lv2:index 2 ;
          lv2:symbol "gain" ;
          lv2:name "Gain" ;
          lv2:default 1.0 ;
          lv2:minimum 0.0 ;
          lv2:maximum 1.0
  ] .
   
<http://example.org/yassy#ui>
	a ui:X11UI ;
        lv2:requiredFeature urid:map, ui:parent, ui:idleInterface , ui:showInterface ;
        lv2:extensionData ui:idleInterface, ui:showInterface ;      
        ui:portNotification [
                ui:plugin <http://example.org/yassy> ;
                lv2:symbol "gain" ;
                ui:protocol ui:floatProtocol
        ] .
        